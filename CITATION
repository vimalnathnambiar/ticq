citHeader("If you use TICQ in your work, please cite it using the following:")

packageDescription <- utils::packageDescription("ticq")

citation <- bibentry(
  bibtype = "Manual",
  author = c(
    person(given = "Vimalnath", family = "Nambiar", email = "vnathnambiar@hotmail.com", role = c("cre", "aut"), comment = c(ORCID = 0000-0001-5384-6788)),
    person(given = "Shabarinath", family = "Nambiar", role = c("aut"), comment = c(ORCID = 0000-0002-6713-1705))
  ),
  title = paste0(packageDescription$Package, ": ", packageDescription$Title),
  note = paste("R package version", packageDescription$Version),
  abstract = packageDescription$Description,
  keywords = packageDescription$Keywords,
  license = packageDescription$License,
  doi = "",
  date = packageDescription$Date,
  year = substr(packageDescription$Date, 1, 4),
  url = packageDescription$URL
)